@model IList<will_blog.Areas.Admin.ViewModels.RoleCheckbox>

<div class="panel panel-default">
  <div class="panel panel-heading">Roles</div>
  <div class="panel panel-body">
    <ul class="list-group">
      @for (var i = 0; i < Model.Count; i++)
      {
        <li class="list-group-item">
          @Html.Hidden("Roles[" + i + "].Id", Model[i].Id)
          <label for="Roles_@(i)__IsChecked">
            @Html.CheckBox("Roles[" + i + "].IsChecked", Model[i].IsChecked)
            @Model[i].Name
          </label>
        </li>
      }
    </ul>
  </div>
</div>