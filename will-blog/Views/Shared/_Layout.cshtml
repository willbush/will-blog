@using System.Web.Optimization

<!DOCTYPE html>
<html>
<head>
  <title>@ViewBag.Title - Will's Blog</title>

  @Styles.Render("~/styles")
</head>
<body>
<header>
  <h2>
    <a href="@Url.RouteUrl("home")">Will's Blog</a>
    <i class="glyphicon glyphicon-apple"/>
  </h2>
  @if (User.Identity.IsAuthenticated)
  {
    <p>Welcome back, @User.Identity.Name</p>
    <a href="@Url.RouteUrl("logout")">Logout</a>

    if (@User.IsInRole("admin"))
    {
      <a href="@Url.Action("index", "Posts", new {area = "admin"})">View posts in admin</a>
    }
  }
  else
  {
    <a href="@Url.RouteUrl("login")">Login</a>
  }
</header>

@RenderBody()

<footer>
  &copy; @DateTime.UtcNow.Year - Will
</footer>

@Scripts.Render("~/scripts")
@RenderSection(name: "Scripts", required: false)
</body>
</html>